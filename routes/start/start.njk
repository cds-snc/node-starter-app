{% extends "base.njk" %}
{% from 'banner.njk' import banner as banner %}

{% block content %}
    <h1>{{ __('start.title') }}</h1>

    

    <h2>{{ __('start.You.will.need') }}</h2>
    <div>{{ __('start.app.email')| safe }}</div>
    <div>{{ __('start.next') | safe }}</div>
    <h2 id='privacy-notice'>{{ __('start.Privacy.notice')| safe }}</h2>

    <p id='privacy-text'>{{ __('start.intro') | safe }}</p>

