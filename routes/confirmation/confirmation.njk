{% extends "base.njk" %}

{% block content %}

    <h1>{{ __('confirmation.title') }}</h1>

    <div>
        <p>
            {{ __('confirmation.intro') }}
        </p>
        <ul>
            <li>{{ __('form.fullname') }}:  <strong>{{ fullname }}</strong></li>
            <li>{{ __('form.email') }}: <strong>{{ email }}</strong></li>
            <li>{{ __('form.send_notifications') }}: <strong>{{ send_notifications }}</strong></li>

            {% if send_notifications == "Yes" %}
                <li>
                    {{ __('form.notify_by') }}:
                    <ul>
                        {% if notify_type.sms %}<li><strong>SMS</strong></li>{% endif %}
                        {% if notify_type.email %}<li><strong>Email</strong></li>{% endif %}
                    </ul>
                </li>
            {% endif %}

        </ul>
    </div>

{% endblock %}
